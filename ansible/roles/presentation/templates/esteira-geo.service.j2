[Unit]
Description=Esteira-Geo Flask Application
After=network.target

[Service]
Type=notify
User={{ presentation_user }}
WorkingDirectory={{ presentation_app_dir }}
Environment="PATH={{ presentation_app_dir }}/venv/bin"
EnvironmentFile={{ presentation_app_dir }}/.env
ExecStart={{ presentation_app_dir }}/venv/bin/gunicorn \
    --workers {{ gunicorn_workers }} \
    --bind 127.0.0.1:{{ flask_port | default(5000) }} \
    --access-logfile {{ presentation_app_dir }}/logs/gunicorn-access.log \
    --error-logfile {{ presentation_app_dir }}/logs/gunicorn-error.log \
    app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
